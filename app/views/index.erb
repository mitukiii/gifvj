<div class="container">
  <div id="content">
    <div class="page-header">
      <h1>GifVJ<h1>
    </div>
    <div id="form-gifs" class="form-inline">
      <% form_tag :gifs, remote: true do |f| %>
      <div class="input-append">
        <%= input_tag :text, name: :name, value: "gif-vj", class: "span2 name", placeholder: "Enter Tumblr User" %>
        <span class="add-on">.tumblr.com</span>
        <%= submit_tag :start, class: "btn" %>
      </div>
      <% end %>
    </div>
    <div id="error-alert" class="alert alert-error hide">
    </div>
    <div id="gifs-progress" class="progress progress-info progress-striped active hide">
      <div class="bar" style="width: 0%"></div>
    </div>
  </div>
</div>
<div id="canvas" class="hide">
  <canvas />
</div>
<script>
  $('.name').autocomplete({
    lookup: <%= @names.to_json.html_safe %>,
    width: 138,
    minChars: 0
  });
</script>
